<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>
<?import java.net.URL?>

<ScrollPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.restaurantmanagement.ItemDetailController" fitToWidth="true" fitToHeight="true">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <VBox spacing="15" alignment="TOP_CENTER" styleClass="content-box">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <HBox alignment="CENTER_LEFT">
            <Button text="&lt; Back" onAction="#onBackClick" styleClass="back-button"/>
        </HBox>

        <VBox spacing="10" alignment="CENTER" maxWidth="600" styleClass="card">
            <ImageView fx:id="detailImageView" fitWidth="300" fitHeight="200" preserveRatio="true"/>

            <!-- Average Rating Display -->
            <HBox fx:id="averageRatingBox" alignment="CENTER" spacing="5"/>

            <Label fx:id="detailNameLabel" styleClass="section-title"/>
            <Label fx:id="detailCategoryLabel" style="-fx-text-fill: gray; -fx-font-size: 16px;"/>
            <Label fx:id="detailPriceLabel" styleClass="price-label"/>

            <VBox spacing="5" alignment="CENTER_LEFT" style="-fx-background-color: #f9f9f9; -fx-padding: 15; -fx-background-radius: 5;">
                <Label text="Description:" styleClass="form-label"/>
                <TextFlow fx:id="detailDescTextFlow" style="-fx-background-color: transparent;"/>
            </VBox>

            <!-- User Rating Section -->
            <VBox fx:id="ratingSection" spacing="10" alignment="CENTER" visible="false" style="-fx-padding: 10; -fx-border-color: #eee; -fx-border-radius: 5;">
                <Label text="Rate this item:" styleClass="form-label"/>
                <HBox fx:id="userRatingBox" alignment="CENTER" spacing="5"/>
                <Label fx:id="ratingStatusLabel" styleClass="status-label-info"/>
            </VBox>

            <HBox spacing="15" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
                <Label text="Quantity:" styleClass="form-label"/>
                <Spinner fx:id="detailQuantitySpinner" min="1" max="20" initialValue="1" editable="true" prefWidth="80" style="-fx-font-size: 14px;"/>
                <Button text="Add to Cart" onAction="#onDetailAddToCartClick" styleClass="action-button"/>
            </HBox>
            <Label fx:id="detailStatusLabel" styleClass="status-label-info"/>
        </VBox>
    </VBox>
</ScrollPane>
