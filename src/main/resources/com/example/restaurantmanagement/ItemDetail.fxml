<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.restaurantmanagement.ItemDetailController" spacing="15" alignment="TOP_CENTER">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox alignment="CENTER_LEFT">
        <Button text="&lt; Back" onAction="#onBackClick"/>
    </HBox>

    <ImageView fx:id="detailImageView" fitWidth="300" fitHeight="200" preserveRatio="true"/>

    <Label fx:id="detailNameLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    <Label fx:id="detailCategoryLabel" style="-fx-text-fill: gray; -fx-font-size: 14px;"/>
    <Label fx:id="detailPriceLabel" style="-fx-font-size: 18px; -fx-text-fill: green; -fx-font-weight: bold;"/>

    <Label text="Description:" style="-fx-font-weight: bold;"/>
    <Label fx:id="detailDescLabel" wrapText="true" maxWidth="400" style="-fx-font-size: 14px;"/>

    <Region VBox.vgrow="ALWAYS"/>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Quantity:"/>
        <Spinner fx:id="detailQuantitySpinner" min="1" max="20" initialValue="1" editable="true" prefWidth="80"/>
        <Button text="Add to Cart" onAction="#onDetailAddToCartClick" style="-fx-background-color: #007bff; -fx-text-fill: white;"/>
    </HBox>
    <Label fx:id="detailStatusLabel" textFill="blue"/>
</VBox>
