<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.restaurantmanagement.CartController" spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox alignment="CENTER_LEFT">
        <Button text="&lt; Back" onAction="#onBackClick"/>
    </HBox>

    <Label text="Current Order (Cart)" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
    <ListView fx:id="cartListView" VBox.vgrow="ALWAYS"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Label text="Total: " style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
        <Label fx:id="cartTotalLabel" text="\$0.00" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
    </HBox>

    <HBox spacing="10">
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Proceed to Payment" onAction="#onProceedToPaymentClick" style="-fx-background-color: green; -fx-text-fill: white;"/>
    </HBox>
    <Label fx:id="cartStatusLabel" textFill="blue"/>
</VBox>
