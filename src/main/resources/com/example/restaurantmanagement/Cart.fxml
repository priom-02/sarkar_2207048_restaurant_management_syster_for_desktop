<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<ScrollPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.restaurantmanagement.CartController" fitToWidth="true" fitToHeight="true">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <VBox spacing="10" alignment="TOP_CENTER" styleClass="content-box">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <HBox alignment="CENTER_LEFT">
            <Button text="&lt; Back" onAction="#onBackClick" styleClass="back-button"/>
        </HBox>

        <Label text="Current Order (Cart)" styleClass="section-title"/>

        <ListView fx:id="cartListView" VBox.vgrow="ALWAYS"/>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Label text="Total: " styleClass="form-label"/>
            <Label fx:id="cartTotalLabel" text="\$0.00" styleClass="total-label"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER">
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Proceed to Payment" onAction="#onProceedToPaymentClick" styleClass="success-button"/>
        </HBox>
        <Label fx:id="cartStatusLabel" styleClass="status-label-info"/>
    </VBox>
</ScrollPane>
