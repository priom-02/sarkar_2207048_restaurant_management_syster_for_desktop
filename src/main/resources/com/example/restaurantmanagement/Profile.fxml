<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.restaurantmanagement.ProfileController" fitToWidth="true" fitToHeight="true">
    <VBox spacing="15" alignment="TOP_CENTER">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <HBox alignment="CENTER_LEFT">
            <Button text="&lt; Back" onAction="#onBackClick"/>
        </HBox>

        <Label text="User Profile" style="-fx-font-weight: bold; -fx-font-size: 20px;"/>

        <VBox spacing="10" maxWidth="400" alignment="CENTER_LEFT">
            <VBox spacing="5">
                <Label text="Full Name:" style="-fx-font-weight: bold;"/>
                <TextField fx:id="profileNameField"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Email (Cannot be changed):" style="-fx-font-weight: bold;"/>
                <TextField fx:id="profileEmailField" editable="false" style="-fx-background-color: #eee;"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Mobile Number:" style="-fx-font-weight: bold;"/>
                <TextField fx:id="profileMobileField"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Address:" style="-fx-font-weight: bold;"/>
                <TextField fx:id="profileAddressField"/>
            </VBox>

            <Button text="Update Profile" onAction="#onUpdateProfileClick" maxWidth="Infinity" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Label fx:id="profileStatusLabel"/>
        </VBox>
    </VBox>
</ScrollPane>
