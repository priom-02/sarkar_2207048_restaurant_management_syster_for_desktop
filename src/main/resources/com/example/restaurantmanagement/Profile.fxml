<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.restaurantmanagement.ProfileController" spacing="15">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox alignment="CENTER_LEFT">
        <Button text="&lt; Back" onAction="#onBackClick"/>
    </HBox>

    <Label text="User Profile" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>

    <VBox spacing="5">
        <Label text="Full Name:"/>
        <TextField fx:id="profileNameField"/>
    </VBox>

    <VBox spacing="5">
        <Label text="Email (Cannot be changed):"/>
        <TextField fx:id="profileEmailField" editable="false" style="-fx-background-color: #eee;"/>
    </VBox>

    <VBox spacing="5">
        <Label text="Mobile Number:"/>
        <TextField fx:id="profileMobileField"/>
    </VBox>

    <VBox spacing="5">
        <Label text="Address:"/>
        <TextField fx:id="profileAddressField"/>
    </VBox>

    <Button text="Update Profile" onAction="#onUpdateProfileClick"/>
    <Label fx:id="profileStatusLabel"/>
</VBox>
