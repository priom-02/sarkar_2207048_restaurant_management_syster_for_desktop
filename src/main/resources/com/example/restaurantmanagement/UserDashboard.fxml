<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.restaurantmanagement.UserDashboard">
    <top>
        <HBox style="-fx-background-color: #333; -fx-padding: 10;" alignment="CENTER_LEFT">
            <Label text="User Dashboard" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Logout" onAction="#onLogoutClick" style="-fx-background-color: #d9534f; -fx-text-fill: white;"/>
        </HBox>
    </top>

    <left>
        <VBox spacing="10" style="-fx-background-color: #f4f4f4; -fx-padding: 10; -fx-pref-width: 150;">
            <Button text="View Menu" onAction="#onViewMenuClick" maxWidth="Infinity"/>
            <Button text="Order History" onAction="#onOrderHistoryClick" maxWidth="Infinity"/>
            <Button text="Profile" onAction="#onProfileClick" maxWidth="Infinity"/>
        </VBox>
    </left>

    <center>
        <StackPane>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- View Menu View (Card Layout) -->
            <VBox fx:id="viewMenuView" spacing="10" visible="true">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Available Menu Items" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="View Cart" onAction="#onViewCartClick" style="-fx-background-color: #ffc107;"/>
                </HBox>

                <!-- Category Bar -->
                <ScrollPane fitToHeight="true" vbarPolicy="NEVER" hbarPolicy="AS_NEEDED" prefHeight="50" minHeight="50" style="-fx-background-color: transparent; -fx-background: transparent;">
                     <HBox fx:id="categoryBox" spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 5;"/>
                </ScrollPane>

                <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                    <TilePane fx:id="menuTilePane" hgap="15" vgap="15" prefColumns="3" style="-fx-padding: 10;"/>
                </ScrollPane>

                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #eee; -fx-padding: 10; -fx-background-radius: 5;">
                    <Label text="Selected Item:" style="-fx-font-weight: bold;"/>
                    <Label fx:id="selectedItemLabel" text="None"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label text="Quantity:"/>
                    <Spinner fx:id="quantitySpinner" min="1" max="10" initialValue="1" editable="true" prefWidth="80"/>
                    <Button text="Add to Cart" onAction="#onAddToOrderClick"/>
                </HBox>
                <Label fx:id="statusLabel" textFill="blue"/>
            </VBox>

            <!-- Cart View -->
            <VBox fx:id="cartView" spacing="10" visible="false">
                <Label text="Your Cart" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                <ListView fx:id="cartListView" VBox.vgrow="ALWAYS"/>
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Label text="Total: " style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <Label fx:id="cartTotalLabel" text="\$0.00" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                </HBox>
                <HBox spacing="10">
                    <Button text="Back to Menu" onAction="#onViewMenuClick"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="Checkout" onAction="#onCheckoutClick" style="-fx-background-color: green; -fx-text-fill: white;"/>
                </HBox>
                <Label fx:id="cartStatusLabel" textFill="blue"/>
            </VBox>

            <!-- Item Detail View -->
            <VBox fx:id="itemDetailView" spacing="15" visible="false" alignment="TOP_CENTER">
                <HBox alignment="CENTER_LEFT">
                    <Button text="&lt; Back to Menu" onAction="#onViewMenuClick"/>
                </HBox>

                <ImageView fx:id="detailImageView" fitWidth="300" fitHeight="200" preserveRatio="true"/>

                <Label fx:id="detailNameLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                <Label fx:id="detailCategoryLabel" style="-fx-text-fill: gray; -fx-font-size: 14px;"/>
                <Label fx:id="detailPriceLabel" style="-fx-font-size: 18px; -fx-text-fill: green; -fx-font-weight: bold;"/>

                <Label text="Description:" style="-fx-font-weight: bold;"/>
                <Label fx:id="detailDescLabel" wrapText="true" maxWidth="400" style="-fx-font-size: 14px;"/>

                <Region VBox.vgrow="ALWAYS"/>

                <HBox spacing="10" alignment="CENTER">
                    <Label text="Quantity:"/>
                    <Spinner fx:id="detailQuantitySpinner" min="1" max="20" initialValue="1" editable="true" prefWidth="80"/>
                    <Button text="Add to Cart" onAction="#onDetailAddToCartClick" style="-fx-background-color: #007bff; -fx-text-fill: white;"/>
                </HBox>
                <Label fx:id="detailStatusLabel" textFill="blue"/>
            </VBox>

            <!-- Order History View -->
            <VBox fx:id="orderHistoryView" spacing="10" visible="false">
                <Label text="Your Past Orders" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                <Button text="Refresh History" onAction="#onRefreshHistoryClick"/>
                <ListView fx:id="orderHistoryListView" VBox.vgrow="ALWAYS"/>
            </VBox>

            <!-- Profile View -->
            <VBox fx:id="profileView" spacing="15" visible="false">
                <Label text="User Profile" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>

                <VBox spacing="5">
                    <Label text="Full Name:"/>
                    <TextField fx:id="profileNameField"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Email (Cannot be changed):"/>
                    <TextField fx:id="profileEmailField" editable="false" style="-fx-background-color: #eee;"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Mobile Number:"/>
                    <TextField fx:id="profileMobileField"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Address:"/>
                    <TextField fx:id="profileAddressField"/>
                </VBox>

                <Button text="Update Profile" onAction="#onUpdateProfileClick"/>
                <Label fx:id="profileStatusLabel"/>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
